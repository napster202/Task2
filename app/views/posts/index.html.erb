<h1> Posts </h1>

<%= link_to 'Create new post', new_post_path %>

 <div id = "form">
  <% @posts.each do |post| %>
        <p>
            <strong>Title:</strong>
            <%= post.caption %>
        </p>
        <p>
            <%= image_tag post.image.url %>
        </p>
        <%= link_to 'Edit', edit_post_path(post) %> | 
        <%= link_to 'Destroy', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
    <%= will_paginate @posts %>
  <% end %>
  </div>